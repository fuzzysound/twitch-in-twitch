{
  "manifest_version": 2,
  "name": "Twitch-in-Twitch",
  "version": "1.2",
  "description": "__MSG_description__",
  "permissions": [
    "https://www.twitch.tv/",
    "declarativeContent",
    "tabs",
    "storage",
    "webNavigation",
    "debugger"
  ],
  "background": {
    "scripts": ["static/js/background.js"]
  },
  "content_scripts": [{
    "js": [ "static/js/content.js" ],
    "css": ["static/css/content.css"],
    "matches": ["https://www.twitch.tv/*"]
  }],
  "icons": {
    "16": "logo/logo16.png",
    "32": "logo/logo32.png",
    "48": "logo/logo48.png",
    "128": "logo/logo128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "logo/logo16.png",
      "32": "logo/logo32.png",
      "48": "logo/logo48.png",
      "128": "logo/logo128.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    "static/media/*"
  ],
  "default_locale": "en"
}
